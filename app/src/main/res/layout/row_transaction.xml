<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:background="@drawable/category_bg"
        android:padding="9dp"
        app:tint="@color/white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/img_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_investment"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_transaction"
        android:text="Buisness"
        android:textStyle="bold"
        android:paddingTop="0dp"
        android:id="@+id/tv_category"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@+id/img_transaction"
        android:textColor="@color/black"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_transaction"
        android:text="Cash"
        android:background="@drawable/accounts_bg"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:id="@+id/tv_trans_category"
        android:paddingEnd="3dp"
        android:layout_marginBottom="0dp"
        android:paddingStart="3dp"

        app:layout_constraintBottom_toBottomOf="@+id/img_transaction"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_trans_category"
        android:text="17 may"
        android:textSize="14dp"
        android:id="@+id/trans_date"
        android:layout_margin="3dp"

        app:layout_constraintBottom_toBottomOf="@+id/img_transaction"

        app:layout_constraintTop_toTopOf="@+id/tv_trans_category"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_transaction"
        app:layout_constraintBottom_toBottomOf="@id/img_transaction"
        android:text="1000"
        android:id="@+id/tv_trans_val"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="0dp"
        android:layout_marginTop="3dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>